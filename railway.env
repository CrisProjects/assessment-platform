# Variables de entorno para Railway
# Copiar estas en el dashboard de Railway

# ============= CONFIGURACIÓN BÁSICA =============
FLASK_ENV=production
FLASK_DEBUG=False
PYTHONUNBUFFERED=1

# ============= SEGURIDAD =============
# Generar una clave única de 32 caracteres para Railway
SECRET_KEY=railway-production-key-assessment-platform-2025-secure

# ============= BASE DE DATOS =============
# Railway configura DATABASE_URL automáticamente con PostgreSQL
# No necesitas configurar DATABASE_URL manualmente

# ============= FORZAR CONFIGURACIÓN =============
# Crear usuarios admin/coach automáticamente
FORCE_ADMIN_CREATION=true

# ============= LOGGING =============
LOG_LEVEL=INFO

# ============= ROTACIÓN DE LOGS (OPCIONAL) =============
# Días de retención de logs de seguridad antes de archivar
# El script cleanup_old_security_logs.py archiva logs antiguos a JSON
# y los elimina de la base de datos para mantener el rendimiento
# LOG_RETENTION_DAYS=90

# Railway Cron Job sugerido para limpieza automática:
# Ejecutar cleanup_old_security_logs.py cada domingo a las 2am
# Cron expression: "0 2 * * 0"
# Comando: python3 cleanup_old_security_logs.py

# ============= RAILWAY ESPECÍFICO =============
# Railway detecta automáticamente el puerto
# PORT=(configurado automáticamente por Railway)

# ============= AWS S3 (OPCIONAL) =============
# Configuración para almacenamiento de avatares en AWS S3
# Si no se configura, los avatares se guardan localmente en /static/avatars
# AWS_ACCESS_KEY_ID=tu-access-key-id
# AWS_SECRET_ACCESS_KEY=tu-secret-access-key
# AWS_S3_BUCKET=efectocoach-avatars
# AWS_REGION=us-east-1

# ============= SEGURIDAD: ALERTAS DE EMAIL (OPCIONAL) =============
# Configurar para recibir alertas de seguridad por email
# Si no se configura, las alertas solo se registran en logs
# ENABLE_SECURITY_ALERTS=true
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=tu-email@gmail.com
# SMTP_PASSWORD=tu-contraseña-de-aplicacion
# ALERT_EMAIL=admin@efectocoach.com

# ============= OPCIONAL =============
# Si necesitas configurar dominio personalizado
# RAILWAY_STATIC_URL=tu-dominio.com
