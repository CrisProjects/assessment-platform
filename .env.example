# Configuración del entorno de desarrollo
# Copia este archivo a .env y ajusta los valores según sea necesario

# Configuración de la aplicación
FLASK_APP=app_complete.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Base de datos
DATABASE_URL=sqlite:///assessments.db

# Configuración del servidor
HOST=0.0.0.0
PORT=5002

# Configuración de correo (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# URLs del frontend (para CORS)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5002,https://assessment-platform-final.vercel.app

# Configuración de sesiones
SESSION_TIMEOUT=3600  # 1 hora en segundos
PERMANENT_SESSION_LIFETIME=86400  # 24 horas en segundos

# Configuración de seguridad (para producción)
# SECRET_KEY=<genera-una-clave-secreta-fuerte>
# SESSION_COOKIE_SECURE=True
# REMEMBER_COOKIE_SECURE=True
