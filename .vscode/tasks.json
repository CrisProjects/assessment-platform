{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "🧹 Limpiar Puerto 5002",
            "type": "shell",
            "command": "python3",
            "args": ["predev.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "🚀 Iniciar Servidor Flask",
            "type": "shell",
            "command": "python3",
            "args": ["start_server_stable.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^🚀 Iniciando servidor Flask",
                    "endsPattern": "^.* Running on .*$"
                }
            }
        },
        {
            "label": "🔍 Verificar Puerto",
            "type": "shell",
            "command": "python3",
            "args": ["predev.py", "--check"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "🔄 Reiniciar Servidor",
            "dependsOrder": "sequence",
            "dependsOn": [
                "🧹 Limpiar Puerto 5002",
                "🚀 Iniciar Servidor Flask"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "📊 Comandos de Puerto",
            "type": "shell",
            "command": "./port_commands.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
