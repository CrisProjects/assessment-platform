{
  "// Configuración recomendada para evitar pérdidas de conexión": "VS Code Settings",
  
  "// ===== TERMINAL Y PERSISTENCIA =====": "",
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
  "terminal.integrated.showExitAlert": false,
  
  "// ===== DESACTIVAR LIVE SERVER =====": "",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "extensions.ignoreRecommendations": false,
  
  "// ===== PROXY Y RED =====": "",
  "http.proxySupport": "off",
  "http.systemCertificates": false,
  
  "// ===== PYTHON ESPECÍFICO =====": "",
  "python.terminal.activateEnvironment": true,
  "python.terminal.executeInFileDir": false,
  "python.defaultInterpreterPath": "python3",
  
  "// ===== AUTO-SAVE Y ARCHIVOS =====": "",
  "files.autoSave": "onWindowChange",
  "files.autoSaveDelay": 1000,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/*.pyc": true,
    "**/venv/**": true,
    "**/env/**": true
  },
  
  "// ===== BÚSQUEDA Y EXCLUSIONES =====": "",
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/venv": true,
    "**/env": true,
    "**/.git": true,
    "**/node_modules": true
  },
  
  "// ===== CONFIGURACIÓN DE PUERTO =====": "",
  "remote.localPortHost": "localhost",
  "remote.portsAttributes": {
    "5002": {
      "label": "Flask Assessment Platform",
      "onAutoForward": "ignore"
    }
  },
  
  "// ===== DEBUGGING =====": "",
  "debug.allowBreakpointsEverywhere": false,
  "debug.openDebug": "neverOpen",
  
  "// ===== EXTENSIONES ESPECÍFICAS =====": "",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  
  "// ===== PREVENIR AUTO-REFRESH =====": "",
  "workbench.editor.enablePreview": false,
  "explorer.autoReveal": false,
  
  "// ===== CONFIGURACIÓN ESPECÍFICA DEL PROYECTO =====": "",
  "python.analysis.extraPaths": [
    "./",
    "./"
  ],
  
  "// ===== CONFIGURACIÓN DE TERMINAL =====": "",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": { "path": "/bin/zsh" },
    "bash": { "path": "/bin/bash" }
  },
  
  "// ===== VALIDACIÓN DE CÓDIGO =====": "",
  "html.validate.scripts": false,
  "javascript.validate.enable": false,
  "[html]": {
    "editor.suggest.insertMode": "replace",
    "javascript.validate.enable": false
  }
}
